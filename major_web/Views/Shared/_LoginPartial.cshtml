@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">

            @if (User.IsInRole("Administrator"))
            {
                <li>
                    @Html.ActionLink("Админка", "Index", "Admin", routeValues: null, htmlAttributes: new { title = "Admin" })
                </li>
                <li>
                    @Html.ActionLink("Джобы", "", "jobs", routeValues: null, htmlAttributes: new { title = "Джобы" })
                </li>
            }

            <li>
                @Html.ActionLink("Отчет по ЦБ", "Index", "Report", routeValues: null, htmlAttributes: new { title = "Отчетность ЦБ" })
            </li>
            <li>
                @Html.ActionLink("Документы ЭДО", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Документы ЭДО" })
            </li>

            <li>
                @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>            
        </ul>
    }
    <div id="user_name" data-user="@User.Identity.GetUserId()"></div>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        @*<li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
    </ul>
