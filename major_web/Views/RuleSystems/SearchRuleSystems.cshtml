
@model IEnumerable<major_data.Models.RuleSystem>

<div id="SearchRuleSystems">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssetType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dogovor.Client.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fond.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Secshondeportament.Name)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>            
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssetType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dogovor.Client.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fond.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Secshondeportament.Name)
                </td>               
                <td>
                    @Html.DisplayFor(modelItem => item.Path)
                </td>               
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>